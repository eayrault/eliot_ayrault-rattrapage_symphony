{% extends 'base.html.twig' %} {% block title %}Liste des catégories{% endblock
%} {% block body %}
<h1>Categories :</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for category in categories %}
    <tr>
      <td>{{ category.name }}</td>
      <td>
        <a href="{{ path('category_show', { id: category.id }) }}">Voir</a>
        <a href="{{ path('category_edit', { id: category.id }) }}">Modifier</a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="3">Aucune catégorie trouvée</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>
<br />
<a href="{{ path('home') }}">Retour à l’accueil</a>
{% endblock %}
